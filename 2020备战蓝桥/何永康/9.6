#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int a,b,c=0,d=1;
    for(int i=1;i<=n;i++)
    {
        cin>>a>>b;
        c=a*d+b*c;
        d=b*d;
    }
    a=c;
    b=d;
    while (b)
    {
        int c=a%b;
        a=b;
        b=c;
    }
    c=c/a;
    d=d/a;
    if(d!=1) cout<<c<<'/'<<d<<endl;
    else cout<<c<<endl;

    return 0;
}




