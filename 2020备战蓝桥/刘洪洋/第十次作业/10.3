#include<iostream>  
#include<stdlib.h> 
using namespace std;
int _n = 0;  
char c[10][10] = { "","","abc","def","ghi","jkl","mno","pqrs","tuv","wxyz" };  
int total[10] = { 0,0,3,3,3,3,3,4,3,4 };
void combine(int number[], int answer[], int index, int n)
{
 
	if (index == n)  
	{
		for (int i = 0; i < n; i++) {
			_n++;
			printf("%c", c[number[i]][answer[i]]);
			if (_n%n == 0)   
				printf("\n");
		}
		return;
		
	}
	for (answer[index] = 0; answer[index] < total[number[index]]; answer[index]++)
		combine(number, answer, index + 1, n);
	
}
	int main()
	{
 
		int number[11];
    int n,i;
		int answer[11] = {};  
		printf("请输入电话号码的长度:\n");
		scanf("%d", &n);  
		printf("请输入一个电话号码:\n");
		for (i = 0; i<n; i++)
			scanf("%d", number + i);
		combine(number, answer, 0, n);
		return 0;
 
	}
