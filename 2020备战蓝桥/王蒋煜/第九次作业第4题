#include<stdio.h>
int a[1000001];
int f(int n)
{
	if(a[n]!=0) return a[n];
	if(n==1) return 1;
	if(n==2) return 2;
	return a[n]=2*(f(n-1))+f(n-2);
}
int main()
{
    int k,n,i,j,c[100];
    scanf("%d",&n);
    for(j=1;j<=n;j++)
    {
	  scanf("%d",&k);
	  c[j]=f(k);
    }
    for(j=1;j<=n;j++)
    {
    	printf("%d\n",c[j]);
    }
    return 0;
}
