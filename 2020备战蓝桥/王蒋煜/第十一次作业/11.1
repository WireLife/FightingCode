#include<string>
#include<cctype>
#include<iostream>
using namespace std;

int main()
{
    string str;
    cout<<"输入一个字符串"<<endl;
    getline(cin,str);
    int a=0,b=0,c=0,d=0,e=0;
    for(string::size_type i=0;i<str.size();i++)
    {
	  if (str[i]>='a' && str[i]<='z')
		a++;
	  if (str[i]>='A' && str[i]<='Z')
		b++;
	  if (str[i]>='0' && str[i]<='9')
		c++;
	  if (str[i]=' ')
		d++;
	  else e++;
    }
    cout<<"大写字母"<<b<<endl;
    cout<<"小写字母"<<a<<endl;
    cout<<"数字的个数"<<c<<endl;
    cout<<"空格数"<<d<<endl;
    cout<<"其他字符"<<e<<endl;
    return 0;
}
