#include<iostream>
using namespace std;
int line[500010];
void init(int m)
{
    for(int i = 0; i < m; i++)
        line[i] = i;
}
void swap(int a, int b)
{
    int t = line[a];
     line[a] = line[b];
     line[b] = t;
}
int isOk(int n)
{
    int i;
    for(i = 0; i < n; i++)
    {
        if(line[i] != i) break;
    }
    if(i != n) return 0;
    else       return 1;
}
int main()
{
    int n;
    while(cin >> n)
    {
        if(n == 0) break;
        init(n);
        int i, a, b;
        for(i = 0; i < n; i++)
            {
                cin >> a >> b;
                swap(a, b);
            }
        if(isOk(n)== 0) cout << "NO" << endl;
        else            cout << "YES" << endl;
    }
    return 0;
}
