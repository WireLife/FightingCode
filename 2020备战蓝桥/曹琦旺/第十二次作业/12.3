#include<iostream>
#include<queue>
using namespace std;

int main()
{
	int n;
	cout << "请输入卡牌数目：" << endl;
	cin >> n;
	int *p = (int *)malloc((n+1) * sizeof(int));
	for (int i = 0; i < n; i++)
		p[i] = (i + 1);
	queue<int> cutoutnum;
	while (*p!='\n')
	{
		cutoutnum.push(p[0]);
		p[n] = p[1];
		for (int i = 0; i < n; i++)
			p[i] = p[i + 2];
	}
	while (!cutoutnum.empty())
	{
		cutoutnum.pop();
	}
	free(p);
	return 0;
}
