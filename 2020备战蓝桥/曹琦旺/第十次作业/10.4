#include<iostream>
using namespace std;

float function(float h,int n)
{
	float s=0,x, height;
	float a[11];
    int i;
    height = h / (pow(2,n));
	for (int i = 1; i <= 10 ; i++)
	{ 
		a[i-1] = 2*(h/(pow(2,i-1)));
	}
	for (int j = 0; j < n; j++)
	{
		s+=a[j];
	}
	x = s - h;
	cout<<height<<endl;
	cout << x << endl;
	return 0;
}

int main()
{
	float h;
	int n;
	cout << "请输入h，n的值：" << endl;
	cin >> h;
	cin>> n;
	function(h,n);
	system("pause");
	return 0;
}
