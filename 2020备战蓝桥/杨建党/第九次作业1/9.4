#include<iostream> 
#include<cstdlib> 
#include<cstdio> 
using namespace std; 
int PGC(int n) 
{ 
	if (n == 1)return 1; 
	else if (n == 2)return 2; 
	else return 2 * PGC(n - 1) + PGC(n - 2); 
} 

int main() 
{ 
	int x, y, z; 
	cin >> x; 
	for (; x > 0; z--) 
	{ 
		cin >> y; 
		z= PGC(y); 
		cout << z << endl; 
	} 
	system("pause"); 
	return 0; 
}
